<%= render 'layerbegin' %>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h3>买满送活动</h3>
    </div>
    <div class="ibox-content">
      <table class="table table-hover table-bordered text-center">
        <thead>
        <tr>
          <th class="text-center">活动名称</th>
          <th class="text-center">是否生效</th>
          <th class="text-center">开始日期</th>
          <th class="text-center">结束日期</th>
          <th class="text-center">操作</th>
        </tr>
        </thead>
        <tbody>
        <% @giveaways.each do |giveaway| %>
            <tr>
              <td><%= giveaway.name %></td>
              <td>

                <%if giveaway.enable == 1 %>
                有效
                    <% else %>
                未生效
                <% end %>
              </td>
              <td>

<%= giveaway.begindate %>
              </td>
              <td>
<%= giveaway.enddate %>
              </td>

              <td><%= link_to '编辑',edit_giveaway_path(giveaway) %>
                &nbsp;
                <%= link_to '删除', giveaway, method: :delete, data: { confirm: '确认删除?' } %>
                    </td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <%= link_to "新增",new_giveaway_path,class: "btn btn-w-m btn-primary pull-right" %>
      <br>
    </div>
  </div>
</div>
<%=render 'layerend' %>