<%= render 'layerbegin' %>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h3>订单管理</h3>
    </div>
    <div class="ibox-content">
      <table class="table table-hover table-bordered text-center">
        <thead>
        <tr>
          <th class="text-center">商家</th>
          <th class="text-center">订单编号</th>
          <th class="text-center">产品名称</th>
          <th class="text-center">数量</th>
          <th class="text-center">付款金额</th>
          <th class="text-center">订单状态</th>
          <th class="text-center">支付时间</th>
          <th class="text-center">操作</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
            <tr>
              <td>
                <% @busines.each do |busine| %>
                <% if busine.id == order.busine_id %>
                    <%= busine.name %>
                        <% break %>
                    <% end %>
                <% end %>
              </td>
              <td>
                <% @buycars.each do |buycar| %>
                <% if buycar.id == order.buycar_id %>
                    <%= buycar.ordernumber %>
                        <% break%>
                    <% end %>
                <% end %>
              </td>
              <td>
                <% @products.each do |product| %>
                    <% if product.id == order.product_id %>
                        <%= product.name %>
                        <% break%>
                    <% end %>
                <% end %>
              </td>
              <td>
                <%= order.number %>
              </td>
              <td>
                <%= order.paymentamount %>
              </td>
              <td>
                <% if order.status==0 %>
                未付款
                    <% else %>
                已付款
                    <% end %>
              </td>
              <td><%= order.updated_at %></td>
              <td>&nbsp;</td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <%= link_to "新增",new_dgt_path,class: "btn btn-w-m btn-primary pull-right" %>
      <br>
    </div>
  </div>
</div>
<%=render 'layerend' %>