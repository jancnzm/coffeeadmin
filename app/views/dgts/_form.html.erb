

<div class="ibox-content form-horizontal m-t">
  <div class="form-group">
    <%= form_for(@dgt,:html => {:class=>'form-horizontal m-t',:multipart => true}) do |f| %>
        <div class="form-group">
          <label class="col-sm-3 control-label">厂商名称：</label>
          <div class="col-sm-5">
            <%= f.text_field :name,class:"form-control" %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label">联系人：</label>
          <div class="col-sm-5">
            <%= f.text_field :contact,class:"form-control" %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label">联系电话：</label>
          <div class="col-sm-5">
            <%= f.text_field :phone,class:"form-control" %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"></label>
          <div class="col-sm-5 text-right">
            <%= f.submit '确定',class: "btn btn-w-m btn-primary " %>&nbsp;<%= link_to "返回",dgts_url,class: "btn btn-w-m btn-primary " %>
          </div>
        </div>
    <% end %>
  </div>
</div>