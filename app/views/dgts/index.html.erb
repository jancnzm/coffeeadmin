<%= render 'layerbegin' %>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h3>厂商管理</h3>
    </div>
    <div class="ibox-content">
      <table class="table table-hover table-bordered text-center">
        <thead>
        <tr>
          <th class="text-center">厂商名称</th>
          <th class="text-center">联系人</th>
          <th class="text-center">联系电话</th>
          <th class="text-center">营业额</th>
          <th class="text-center">已支付额</th>
          <th class="text-center">操作</th>
        </tr>
        </thead>
        <tbody>
        <% @dgts.each do |dgt| %>
            <tr>
              <td><%= dgt.name %></td>
              <td><%= dgt.contact %></td>
              <td><%= dgt.phone %></td>
              <td>
              <% dgtfees=dgt.dgtfees %>
                <%= dgtfees.sum('amount') %>
              </td>
              <td><%= dgt.amountsub %></td>
              <td><%= link_to '编辑',edit_dgt_path(dgt) %>
                <%= link_to '删除', dgt, method: :delete, data: { confirm: '确认删除?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <%= link_to "新增",new_dgt_path,class: "btn btn-w-m btn-primary pull-right" %>
      <br>
    </div>
  </div>
</div>
<%=render 'layerend' %>