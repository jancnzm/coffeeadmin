<%= render 'layerbegin' %>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h3>利润统计</h3>
    </div>
    <div class="ibox-content">
      <table class="table table-hover table-bordered text-center">
        <thead>
        <tr>
          <th class="text-center">厂商名称</th>
          <th class="text-center">产品</th>
          <th class="text-center">数量</th>
          <th class="text-center">利润</th>
          <th class="text-center">时间</th>

        </tr>
        </thead>
        <tbody>
        <% @profits.each do |profit| %>
            <tr>
              <td><%= profit.dgt %></td>
              <td><%= profit.product %></td>
              <td><%= profit.number %></td>
              <td><%= profit.profit %></td>
              <td><%= profit.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <br>
    </div>
  </div>
</div>
<%=render 'layerend' %>