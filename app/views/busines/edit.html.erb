<%= render 'layerbegin' %>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h3>编辑商家</h3>
    </div>

    <div class="ibox-content form-horizontal m-t">
      <div class="form-group">
        <%= form_for(@busine,:html => {:class=>'form-horizontal m-t',:multipart => true}) do |f| %>
            <div class="form-group">
              <label class="col-sm-3 control-label">商家名称：</label>
              <div class="col-sm-5">
                <%= f.text_field :name,class:"form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label">区域：</label>
              <div class="col-sm-5">
                <%= f.text_field :province,class:"form-control",readonly:'true' %>
                <%= f.text_field :city,class:"form-control",readonly:'true' %>
                <%= f.text_field :districe,class:"form-control",readonly:'true' %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label">详细地址：</label>
              <div class="col-sm-5">
                <%= f.text_field :address,class:"form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label">联系人：</label>
              <div class="col-sm-5">
                <%= f.text_field :contact,class:"form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label">联系人电话：</label>
              <div class="col-sm-5">
                <%= f.text_field :contactphone,class:"form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label">商务电话：</label>
              <div class="col-sm-5">
                <%= f.text_field :buessphone,class:"form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label"></label>
              <div class="col-sm-5">
                <%= f.submit '确定',class: "btn btn-w-m btn-primary pull-right"%>
              </div>
            </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
<%=render 'layerend' %>