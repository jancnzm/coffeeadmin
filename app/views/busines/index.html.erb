<%= render 'layerbegin' %>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h3>商家</h3>
    </div>
    <div class="ibox-content">
      <table class="table table-hover table-bordered text-center">
        <thead>
        <tr>
          <th class="text-center">商家名称</th>
          <th class="text-center">地址</th>
          <th class="text-center">联系人</th>
          <th class="text-center">联系人电话</th>
          <th class="text-center">商务电话</th>
          <th class="text-center">创建时间</th>
          <th class="text-center">操作</th>
        </tr>
        </thead>
        <tbody>
        <% count = 0 %>
        <% @busines.each do |busine| %>
        <% count+=1 %>
            <tr>
              <td><%= busine.name %></td>
              <td><%= busine.province %><%= busine.city %><%= busine.districe %><%= busine.address %></td>
              <td><%= busine.contact %></td>
              <td><%= busine.contactphone %></td>
              <td><%= busine.buessphone %></td>
              <td><%= busine.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>

              <td><%= link_to '编辑',edit_busine_path(busine) %>
                </td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <div class="text-center">
        <table align="center">
          <tr>
            <td>
              记录数：<%= count %>
              &nbsp;/&nbsp;
              <%= @businecount %>&nbsp;&nbsp;&nbsp;&nbsp;
            </td>

            <td>
              <%= will_paginate @busines, renderer: BootstrapPagination::Rails %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
<%=render 'layerend' %>