<%= render 'layerbegin' %>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h3>快递管理</h3>
    </div>
    <div class="ibox-content">
      <table class="table table-hover table-bordered text-center">
        <thead>
        <tr>
          <th class="text-center">快递公司</th>
          <th class="text-center">操作</th>
        </tr>
        </thead>
        <tbody>
        <% @delives.each do |delive| %>
            <tr>
              <td><%= delive.delive %></td>
              <td><%= link_to '编辑',edit_delife_path(delive) %>
                <%= link_to '删除', delive, method: :delete, data: { confirm: '确认删除?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <%= link_to "新增",new_delife_path,class: "btn btn-w-m btn-primary pull-right" %>
      <br>
    </div>
  </div>
</div>
<%=render 'layerend' %>