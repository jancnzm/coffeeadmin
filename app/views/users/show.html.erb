<%= render 'layerbegin' %>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h3>编辑用户</h3>
    </div>

    <div class="ibox-content form-horizontal m-t">
      <div class="form-group">

        <div class="form-group">
          <label class="col-sm-3 control-label">姓名：</label>
          <div class="col-sm-5" style="padding-top: 7px;">
            <%= @user.username %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label">账号：</label>
          <div class="col-sm-5" style="padding-top: 7px;">
            <%= @user.login %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label">创建时间：</label>
          <div class="col-sm-5" style="padding-top: 7px;">
            <%= @user.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label">状态：</label>
          <div class="col-sm-5" style="padding-top: 7px;">
            <% if @user.status==0 %>
                停用
            <% elsif @user.status == 1 %>
                正常
            <% elsif @user.status == 2 %>
                区域经理
            <% else %>
                未审核
            <% end %>


          </div>
        </div>

        <br>
        <div class="table-responsive m-t">
          <table class="table invoice-table">
            <thead>
            <tr>
              <th>区域经理</th>

              <th>账号</th>

              <th>注册时间</th>
              <th>操作</th>

            </tr>
            </thead>
            <tbody>




            <tr>
              <td>
                <strong>
                  <% if @parent %>
                      <%= @parent.username %>
                  <% else %>
                      无
                  <% end %>
                </strong>
              </td>

              <td>
                <% if @parent %>
                    <%= @parent.login %>
                <% else %>
                    无
                <% end %>
              </td>
              <td>
                <% if @parent %>
                    <%= @parent.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
                <% else %>
                    无
                <% end %>
              </td>
              <td>

              </td>

            </tr>


            </tbody>
          </table>
        </div>


        <div class="form-group">
          <label class="col-sm-3 control-label"><%= @user.username %></label>
          <div class="col-sm-5" style="padding-top: 8px;">

          </div>
        </div>




      </div>
    </div>

  </div>
</div>
<%=render 'layerend' %>