<%= render 'layerbegin' %>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h3>用户</h3>
    </div>
    <div class="ibox-content">
      <table class="table table-hover table-bordered text-center">
        <thead>
        <tr>
          <th class="text-center">用户名</th>
          <th class="text-center">登陆名</th>
          <th class="text-center">注册时间</th>
          <th class="text-center">营业额</th>
          <th class="text-center">未提金额</th>
          <th class="text-center">状态</th>
          <th class="text-center">操作</th>
        </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
            <tr>
              <td><%= user.username %></td>
              <td><%= user.login %></td>
              <td><%= user.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
<td>
  <%=user.balance %>
              </td>
              <td>
                <%=user.balance %>
              </td>


              <td>
                <% if user.status == 1 %>
                    <span class="text-success" >正常</span>
                <% elsif user.status==-1 %>
                    <span class="text-warning">未审核</span>
                    <% else %>
                <span class="text-danger"> 停用</span>
                <% end %>
              </td>






              <td>
                <%= link_to '佣金',user_useramounts_path(user) %>
                <%= link_to '编辑',edit_user_path(user) %>
                <%= link_to '删除', user, method: :delete, data: { confirm: '确认删除?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <%= link_to "新增",class: "btn btn-w-m btn-success pull-right" %>
      <br>
    </div>
  </div>
</div>
<%=render 'layerend' %>